# vim: filetype=bash

#!/bin/sh

prefix=/usr/local
debugsym=true
profilesym=false

for arg in "$@"; do
    case "$arg" in
    --prefix=*)
        prefix=`echo $arg | sed 's/--prefix=//'`
        ;;

    --enable-debug)
        debugsym=true;;
    --disable-debug)
        debugsym=false;;

    --enable-profile)
        profilesym=true;;
    --disable-profile)
        profilesym=false;;

    --help)
        echo 'usage: ./configure [options]'
        echo 'options:'
        echo '  --prefix=<path>: installation prefix'
        echo '  --enable-debug: include debug symbols'
        echo '  --disable-debug: do not include debug symbols'
        echo '  --enable-profile: include profile symbols'
        echo '  --disable-profile: do not include profile symbols'
        echo 'all invalid options are silently ignored.'
        echo
        echo 'To set a special compiler (default is gcc), you can configure with setting CC environment variable like this:'
        echo ' CC=clang ./configure'
        exit 0
        ;;
    esac
done

echo 'generating makefile ...'
if [[ ! -v CC ]] ; then
    c_compiler=gcc
else
    c_compiler="${CC}"
fi

echo "PREFIX = $prefix" >Makefile
if $debugsym; then
    echo 'dbg = -g' >>Makefile
fi
if $profilesym; then
    echo 'profile = -pg' >>Makefile
fi

if [ "$c_compiler"=="clang" ]
then
    echo 'w_init_override = -Wno-initializer-overrides' >> Makefile
else
    echo 'w_init_override = -Wno-override-init' >> Makefile
fi

echo 'CC = '$c_compiler'' >> Makefile

cat Makefile.in >>Makefile
echo 'configuration complete, type make to build.'
